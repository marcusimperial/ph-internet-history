<section class="section-container">

    <div class="section2-banner" data-aos="fade-right" data-aos-duration="1000" data-aos-delay="250">

        <img src={{ image.path }} alt={{ image.alt }} class="section-img">

    </div>

    <div class="section-text-container reverse">

        <h2 data-aos="fade-right" data-aos-duration="1000" class="section-title" data-aos-delay="500">{{ title }}</h2>
        <p data-aos="fade-right" data-aos-duration="1000" data-aos-delay="500">{{ description }}</p>

    </div>
    
</section>